{% extends "::layout.html.twig" %}

{% block title %}Authentification{% endblock %}

{% block body %}

    <!-- **********************************************************************************************************************************************************
    MAIN CONTENT
    *********************************************************************************************************************************************************** -->

    <div id="login-page">
        <div class="container">
            <form class="form-login" action="{{ path('login_check') }}" method="post">
                <h2 class="form-login-heading">Administrateur  {{ error }}</h2>
                <div class="login-wrap">
                    <input type="text" class="form-control" placeholder="User ID" autofocus id="username"  name="_username" value="{{ last_username }}">
                    <br>
                    <input type="password" class="form-control" placeholder="Password"  id="password" name="_password">
                    <br>
                    <button class="btn btn-theme btn-block" type="submit"><i class="fa fa-lock"></i> Connecter</button>
                </div>
            </form>
        </div>
    </div>
    {% block javascripts %}
        {{ parent() }}
        <!-- js placed at the end of the document so the pages load faster -->
        <script src="{{ asset('assets/js/jquery.js') }}"></script>
        <script src="{{ asset('assets/js/bootstrap.min.js') }}"></script>

        <!--BACKSTRETCH-->
        <!-- You can use an image of whatever size. This script will stretch to fit in any screen size.-->
        <script type="text/javascript" src="{{ asset('assets/js/jquery.backstretch.min.js') }}"></script>
        <script>
            $.backstretch("{{ asset('assets/img/rayon_supermarche.jpg') }}", {speed: 500});
        </script>
    {% endblock %}


{% endblock %}
